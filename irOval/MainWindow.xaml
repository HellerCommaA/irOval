<Window x:Class="irOval.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:irOval"
        mc:Ignorable="d"
        AllowsTransparency = "True"
        WindowStyle = "None"
        Background = "Transparent"
        Topmost="True"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Width="780" Height="100px" x:Name="ThrottleTextBlock" HorizontalAlignment="Center" Margin="0,167,0,167">This is test text</TextBlock>
        <Button Width="50px" Height="50px" x:Name="StartButton" Click="StartButtonMouseClick">Start</Button>
        <Label x:Name="RunningLabel" Content="Not Running" HorizontalAlignment="Left" Margin="175,97,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
